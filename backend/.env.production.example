# PRODUCTION ENVIRONMENT VARIABLES - CRITICAL FOR SECURITY
# Copy this file to .env and fill in the actual values

# Environment (REQUIRED)
ENVIRONMENT=production

# Security - JWT (CRITICAL: Generate strong random keys)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-min-32-chars-here-generate-with-openssl
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database (REQUIRED)
MONGODB_URL=mongodb://your-mongodb-host:27017
MONGODB_DB_NAME=stegmaier_courses_prod

# CORS Origins (CRITICAL: Set your actual domains)
FRONTEND_URL=https://your-frontend-domain.com
ADMIN_URL=https://admin.your-domain.com
ADDITIONAL_CORS_ORIGINS=https://api.your-domain.com,https://cdn.your-domain.com

# Redis for Rate Limiting (REQUIRED)
REDIS_URL=redis://your-redis-host:6379/0

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security Headers
SECURITY_HEADERS_ENABLED=true

# File Upload Security
MAX_VIDEO_SIZE=52428800
MAX_IMAGE_SIZE=5242880
MAX_TOTAL_UPLOAD_SIZE=104857600
MAX_FILES_PER_REQUEST=5
ENABLE_VIRUS_SCAN=false

# Media Storage
MEDIA_ROOT=/app/media

# Optional: Additional security settings
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# LOG_LEVEL=INFO
