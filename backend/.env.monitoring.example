# Advanced Monitoring System Environment Variables
# Copy to .env and configure with your actual values

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Redis Configuration (Rate Limiting & Caching)
REDIS_URL=redis://localhost:6379/0

# Email Service Configuration (Alerting)
EMAIL_SERVICE_URL=http://localhost:8001
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Integration (Alerting)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# System Configuration
MEDIA_ROOT=/app/media
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database Configuration (Already configured)
MONGODB_URL=mongodb://localhost:27017/stegmaier_lms

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis  # or "memory" as fallback

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=8090
HEALTH_CHECK_ENABLED=true
STRUCTURED_LOGGING_ENABLED=true

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_CHECK_INTERVAL=60  # seconds
ALERT_EMAIL_FROM=monitoring@stegmaier.com
ALERT_ESCALATION_ENABLED=true

# Performance Thresholds
SLOW_REQUEST_THRESHOLD=1.0  # seconds
HIGH_MEMORY_THRESHOLD=85    # percentage
HIGH_CPU_THRESHOLD=80       # percentage
HIGH_DISK_USAGE_THRESHOLD=90 # percentage

# Business Metrics Thresholds
LOW_COMPLETION_RATE_THRESHOLD=70  # percentage
HIGH_ERROR_RATE_THRESHOLD=5       # percentage
